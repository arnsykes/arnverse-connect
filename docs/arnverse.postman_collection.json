{
  "info": {
    "name": "ARNVERSE API Collection",
    "description": "Complete API collection for ARNVERSE social media platform",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://arnworld.space/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.ok && response.data.token) {",
                  "        pm.collectionVariables.set('auth_token', response.data.token);",
                  "        console.log('Token saved:', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"alice@arnverse.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login.php",
              "host": ["{{base_url}}"],
              "path": ["login.php"]
            },
            "description": "Login with demo user alice@arnverse.com"
          }
        },
        {
          "name": "Check Auth",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth.php",
              "host": ["{{base_url}}"],
              "path": ["auth.php"]
            },
            "description": "Verify current user authentication"
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST", 
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newuser\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register.php",
              "host": ["{{base_url}}"],
              "path": ["register.php"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/logout.php",
              "host": ["{{base_url}}"],
              "path": ["logout.php"]
            }
          }
        }
      ]
    },
    {
      "name": "Posts & Feed",
      "item": [
        {
          "name": "Get Feed",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/feed.php?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["feed.php"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit", 
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "content",
                  "value": "Test post from Postman! #test #api",
                  "type": "text"
                },
                {
                  "key": "media_type",
                  "value": "none",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/post.php",
              "host": ["{{base_url}}"],
              "path": ["post.php"]
            }
          }
        },
        {
          "name": "Like Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"post_id\": \"1\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/like_post.php",
              "host": ["{{base_url}}"],
              "path": ["like_post.php"]
            }
          }
        },
        {
          "name": "Comment on Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"post_id\": \"1\",\n  \"content\": \"Great post! Testing comment from API.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/comment_post.php",
              "host": ["{{base_url}}"],
              "path": ["comment_post.php"]
            }
          }
        },
        {
          "name": "Get Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/get_comments.php?post_id=1",
              "host": ["{{base_url}}"],
              "path": ["get_comments.php"],
              "query": [
                {
                  "key": "post_id",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    },
